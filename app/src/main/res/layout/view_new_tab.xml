<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <!-- Logo di atas -->
    <ImageView
        android:id="@+id/logoGoogle"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:src="@drawable/ic_google"
        android:contentDescription="@string/app_name"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="20dp"/>

    <!-- Kotak search di tengah -->
    <RelativeLayout
        android:id="@+id/searchBox"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/bg_search_chip"
        android:paddingStart="16dp"
        android:paddingEnd="12dp">

        <EditText
            android:id="@+id/ntpSearchInput"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toStartOf="@+id/ntpBtnGo"
            android:layout_toLeftOf="@+id/ntpBtnGo"
            android:background="@android:color/transparent"
            android:hint="Telusuri atau ketik URL"
            android:singleLine="true"
            android:imeOptions="actionSearch"
            android:inputType="textUri|textNoSuggestions"
            android:paddingEnd="12dp"
            android:textColor="@android:color/white"
            android:textColorHint="#88FFFFFF"/>

        <!-- Ikon cari: hanya muncul saat ada teks -->
        <ImageButton
            android:id="@+id/ntpBtnGo"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_search"
            android:contentDescription="Cari"
            android:visibility="gone"/>
    </RelativeLayout>

    <!-- Deretan situs yang baru dibuka -->
    <TextView
        android:id="@+id/labelRecents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Terbaru"
        android:textSize="12sp"
        android:textColor="#8A000000"
        android:layout_marginTop="24dp"
        android:visibility="gone"/>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/ntpRecents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"/>
    </HorizontalScrollView>

</LinearLayout>